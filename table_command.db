/* ------------------ user_panel ------------------------- *
command = 'CREATE TABLE user_panel (\
    user_name TEXT PRIMARY KEY,\
    hash_key TEXT,\
    user_password TEXT,\
    full_name TEXT,\
    role TEXT\
);'

/* ------------------ item_details ------------------------- *
'CREATE TABLE item_details (\
    code  TEXT PRIMARY KEY,\
    name TEXT,\
    group_ TEXT,\
    company TEXT,\
    vat_rate REAL,\
    quantity INTEGER,\
    unit_purchase_price REAL,\
    unit_sale_price REAL,\
    invoice_id INTEGER, \
    FOREIGN KEY (invoice_id) REFERENCES invoice(invoice_id)\
);'

/* ------------------ invoice ------------------------- *
'CREATE TABLE invoice (\
    invoice_id INTEGER PRIMARY KEY AUTOINCREMENT,\
    type TEXT, \
    date DATE,\
    time TIME, \
    total REAL, \
    discount REAL, \
    vat REAL,\
    payable REAL, \
    paid REAl, \
    change REAL \
);'

/* ------------------ sale or purchase product details ------------------------- *
'CREATE TABLE sale_purchase (\
    code  TEXT,\
    name TEXT,\
    quantity INTEGER,\
    unit_price REAL,\
    total_price REAL,\
    discount REAL,\
    vat REAL,\
    payable REAL,\
    paid REAL,\
    change REAL,\
    invoice_id INTEGER, \
    FOREIGN KEY (code) REFERENCES item_details(code), \
    FOREIGN KEY (invoice_id) REFERENCES invoice(invoice_id) \
);'
